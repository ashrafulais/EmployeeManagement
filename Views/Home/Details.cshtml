@model HomeDetailsViewModel

@{
    ViewBag.Title = "Details page";
    var photoPath = "~/img/" + (Model.Employee.PhotoPath ?? "img_avatar1.png");
}

    <h2>Page title: @Model.PageTitle</h2>

    <div class="col-sm-6">
        <div class="card">
            <img class="card-img-top" src="@photoPath" asp-append-version="true" alt="Card image">
            <div class="card-body">
                <h4 class="card-title">@Model.Employee.Name</h4>
                <p class="card-text">@Model.Employee.Name is in the @Model.Employee.Department Department.</p>
            </div>

            <div class="card-footer">

                <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>

            </div>
        </div>
    </div>


@section Scripts {
    <script src="~/js/script.js"></script>
}